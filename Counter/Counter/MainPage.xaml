<Page
    x:Class="Counter.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Counter"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
KeyUp="MainPage_OnKeyUp" >
    <RelativePanel>
        <TextBlock 
            Name="_text"
            Text="{Binding Text}" Margin="0,0,-35,21.4"/>
        <Button FontSize="15" Padding="0" Content="Click" Click="ButtonBase_OnClick" RenderTransformOrigin="3.12,1.915" HorizontalAlignment="Left" Margin="39,0,0,0" VerticalAlignment="Center" Height="21" Width="38"/>
        <Button Click="ButtonBase_OnClick2" FontSize="15" Padding="0" Content="Reset" HorizontalAlignment="Left" Height="22" Margin="82,0,0,0" VerticalAlignment="Center" Width="34"/>
    </RelativePanel>

</Page>
